<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" spacing="10">
  <TableView fx:id="dataTable" prefHeight="200" prefWidth="400">
    <columns>
      <TableColumn fx:id="colId" text="ID" />
      <TableColumn fx:id="colName" text="Name" />
      <TableColumn fx:id="colDate" text="Date" />
    </columns>
  </TableView>

  <HBox alignment="CENTER" spacing="10">
    <TextField fx:id="idField" promptText="ID" />
    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="dateField" promptText="Date" />
  </HBox>

  <HBox alignment="CENTER" spacing="10">
    <Button fx:id="insertButton" text="Insert" />
    <Button fx:id="updateButton" text="Update" />
    <Button fx:id="deleteButton" text="Delete" />
    <Button fx:id="viewDataButton" text="View Data" />
  </HBox>

</VBox>


